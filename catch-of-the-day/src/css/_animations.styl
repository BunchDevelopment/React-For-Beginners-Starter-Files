/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transform translateX(-120%)
  transition 200ms
  max-height 0
  padding 0
  &.order-enter-active
    max-height 60px
    transform translateX(0)
    transition 200ms
    padding 2rem 0 !important

.order-exit
  transform translateX(0)
  transition 200ms
  &.order-exit-active
    transform: translateX(120%)
    transition 200ms